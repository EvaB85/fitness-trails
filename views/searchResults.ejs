<h2>Home</h2>
<p>Search for a trail of interest. </p>

<form class="form" action="/search" method="GET">
  <label for="city-input">City Name</label>
  <input id="city-input" type="text" name="city" required>

  <label for="state-input">State</label>
  <input id="state-input" type="text" name="state" required>

  <label for="distance">Distance</label>
  <input id="distance" type="number" name="distance" required>

  <button type="submit">Submit</button>
</form>

<% searchResults.forEach(function(result) { %>
  <!-- click on anchor tag - GET request to it's href /trail/7834962 (see controllers) -->
  <a class="trail-name-link" href="/trail/<%= result.id %>">
    <p><%= result.name %></p>
  </a>
  <p><%= result.type %></p>
  <p><%= result.summary %></p>

  <a target="_blank" class="trail-url" href="<%= result.url %>">
    <p><%= result.url %></p>
  </a>

  <img src="<%= result.imgSmallMed %>" />
  <p><%= result.length %></p>
  <p><%= result.high %></p>
  <hr />
<% }); %>
